@model EventEase.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Booking</h2>

@using (Html.BeginForm("Create", "Booking", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <!-- Validation Summary -->
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.BookingDate, "Booking Date", new { @class = "form-label" })
        @Html.TextBoxFor(m => m.BookingDate, new { @class = "form-control", type = "datetime-local", placeholder = "Select booking date", aria_describedby = "BookingDateError" })
        @Html.ValidationMessageFor(m => m.BookingDate, "", new { @id = "BookingDateError", @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.EventId, "Event", new { @class = "form-label" })
        @Html.DropDownListFor(m => m.EventId, Model.Events, "Select Event", new { @class = "form-control", aria_describedby = "EventIdError" })
        @Html.ValidationMessageFor(m => m.EventId, "", new { @id = "EventIdError", @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.EventType, "Event Type", new { @class = "form-label" })
        @Html.DropDownListFor(m => m.EventTypeId, Model.EventTypes, "Select Event Type", new { @class = "form-control", placeholder = "Enter event type", aria_describedby = "EventTypeError" })
        @Html.ValidationMessageFor(m => m.EventType, "", new { @id = "EventTypeError", @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.VenueId, "Venue", new { @class = "form-label" })
        @Html.DropDownListFor(m => m.VenueId, Model.Venues, "Select Venue", new { @class = "form-control", aria_describedby = "VenueIdError" })
        @Html.ValidationMessageFor(m => m.VenueId, "", new { @id = "VenueIdError", @class = "text-danger" })
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Submit Booking</button>
        <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Cancel</a>
    </div>
}

