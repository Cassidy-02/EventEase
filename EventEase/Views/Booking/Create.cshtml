@model EventEase.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Booking</h2>

@using (Html.BeginForm("Create", "Booking", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.BookingDate, "Booking Date")
        @Html.TextBoxFor(m => m.BookingDate, new { @class = "form-control", type = "datetime-local", placeholder = "Select booking date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EventId, "Event")
        @Html.DropDownListFor(m => m.EventId, new SelectList(ViewBag.Events, "EventId", "EventName"), "Select Event", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VenueId, "Venue")
        @Html.DropDownListFor(m => m.VenueId, new SelectList(ViewBag.Venues, "VenueId", "VenueName"), "Select Venue", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit Booking</button>
    <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Cancel</a>
}
