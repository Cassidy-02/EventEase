@model EventEase.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Booking</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BookingId)

    <div class="form-group">
        @Html.LabelFor(m => m.BookingDate)
        @Html.TextBoxFor(m => m.BookingDate, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EventId)
        @Html.DropDownListFor(m => m.EventId, Model.Events, "Select Event", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EventTypeId)
        @Html.DropDownListFor(m => m.EventTypeId, Model.EventTypes, "Select Event Type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VenueId)
        @Html.DropDownListFor(m => m.VenueId, Model.Venues, "Select Venue", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index", "Booking")" class="btn btn-secondary">Cancel</a>
}
