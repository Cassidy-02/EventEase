@model EventEase.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Booking</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.BookingDate)
        @Html.TextBoxFor(m => m.BookingDate, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EventId)
        @Html.DropDownListFor(m => m.EventId, new SelectList(ViewBag.EventList, "EventId", "EventName"), "Select Event", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.VenueId)
        @Html.DropDownListFor(m => m.VenueId, new SelectList(ViewBag.VenueList, "VenueId", "VenueName"), "Select Venue", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
}
