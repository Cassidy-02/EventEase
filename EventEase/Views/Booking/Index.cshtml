@model IEnumerable<EventEase.Models.Booking>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bookings</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            for (int i = 0; i < Model.Count(); i++)
            {
                var booking = Model.ElementAt(i);
                <tr>
                    <td>@(i + 1)</td>
                    <td>@booking.Event?.EventName</td>
                    <td>@booking.Venue?.VenueName</td>
                    <td>@booking.BookingDate?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-primary btn-sm" aria-label="Edit Booking">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger btn-sm" aria-label="Delete Booking">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No bookings found.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Booking</a>
