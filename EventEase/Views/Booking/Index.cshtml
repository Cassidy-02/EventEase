@model IEnumerable<EventEase.Models.Booking>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bookings</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var booking in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@booking.Event?.EventName</td>
                    <td>@booking.Venue?.VenueName</td>
                    <td>@booking.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = booking.BookingId }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = booking.BookingId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No bookings found.</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Booking")" class="btn btn-success">Create New Booking</a>

