@model IEnumerable<EventEase.Models.Booking>
@{
    ViewBag["Title"] = "Manage Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Bookings</h2>

<form method="get" asp-action="Manage" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Search by Booking ID or Event Name" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>
                <a asp-action="Manage" asp-route-sortOrder="@ViewBag.EventSort" asp-route-search="@ViewBag.CurrentSearch">Event Name</a>
            </th>
            <th>
                <a asp-action="Manage" asp-route-sortOrder="@ViewBag.DateSort" asp-route-search="@ViewBag.CurrentSearch">Booking Date</a>
            </th>
            <th>Venue</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.Event?.EventName</td>
                <td>@booking.BookingDate?.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@booking.Venue?.VenueName</td>
                <td>@booking.Venue?.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.BookingId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Manage" asp-route-page="@i" asp-route-search="@ViewBag.CurrentSearch" asp-route-sortOrder="@ViewBag.CurrentSort">@i</a>
            </li>
        }
    </ul>
</nav>
