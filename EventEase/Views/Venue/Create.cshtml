@model EventEase.Models.Venue

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Venue</h2>

@using (Html.BeginForm("Create", "Venue", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.VenueName, "Venue Name")
        @Html.TextBoxFor(m => m.VenueName, new { @class = "form-control", placeholder = "Enter venue name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Location, "Location")
        @Html.TextBoxFor(m => m.Location, new { @class = "form-control", placeholder = "Enter venue location" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Capacity, "Capacity")
        @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", placeholder = "Enter venue capacity" })
    </div>

    <div class="form-group">
        <label for="ImageFile">Venue Image</label>
        <input type="file" id="ImageFile" name="ImageFile" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Display", "Venue")" class="btn btn-secondary">Cancel</a>
}
