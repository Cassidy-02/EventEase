@model EventEase.Models.Venue

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Venue</h2>

<p>Are you sure you want to delete this venue?</p>

<div>
    <strong>Venue Name:</strong> @Model.VenueName <br />
    <strong>Location:</strong> @Model.Location <br />
    <strong>Capacity:</strong> @Model.Capacity <br />
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Display", "Venue")" class="btn btn-secondary">Cancel</a>
}


