@model EventEase.Models.Venue

<h2>Delete Venue</h2>
<p>Are you sure you want to delete this venue?</p>

<div class="card">
    <img src="@Model.ImageUrl" alt="Venue Image" class="img-thumbnail" style="width: 200px;">
    <h3>@Model.VenueName</h3>
    <p>Location: @Model.Location</p>
    <p>Capacity: @Model.Capacity</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
